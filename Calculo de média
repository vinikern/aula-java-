
package media;

import java.util.Scanner;

public class Media {

    public static void main(String[] args) {
        
        //Declarar as variaveis 
    int n1;
    int n2;
    int n3;
    int n4; 
    int media;
    
        //Imprimir na tela 
    System.out.println("Vamos calcular a média de quatro numeros!");
       
        //Recebe os valores 
    Scanner in = new Scanner (System.in);
        System.out.println("Digite o primeiro número: ");
        n1 = in.nextInt();
        System.out.println("Digite o segundo número: ");
        n2 = in.nextInt();
        System.out.println("Digite o terceiro número: ");
        n3 = in.nextInt(); 
        System.out.println("Digite o quarto numero: ");
        n4 = in.nextInt();
        
        //Calculo da média 
    media = (n1+n2+n3+n4)/4;
    
        //Imprimir na tela 
        System.out.println("A média dos valores digitados é: "+ media);
        
        //Mostrar se atingiu ou não a média 
        if(media>=9){
            System.out.println("Sua média é "+ media + " Exelente!");
        }else if (media>=8){
            System.out.println("Sua média é "+ media + " Ótimo!");
        }else if (media>=7){
            System.out.println("Sua média é "+ media + " Bom!");
        }else if (media <=6){
            System.out.println("Sua média é "+ media + " Reprovado!");
        }
    }
